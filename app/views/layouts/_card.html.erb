<div class="container">
  <div class="row">

  <% @cocktails.each do |cocktail| %>

    <div class="col-xs-12 col-sm-4">
        <% if cocktail.photo.blank? %>
        <div class="all-card">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path('logo.png') %>');">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
          </div>
        </div>

        <% else %>
          <div class="all-card">
           <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
          </div>

          </div>
          <% end %>

      </div>
    <% end %>
      <!-- insert <div class="card"> -->

    </div>
  </div>
</div>
